@model Dominio.Entidades.Pedido

@{
    ViewData["Title"] = "Detalles del Pedido";
}

<div class="container mt-4">
    <h1>@ViewData["Title"] #@Model.Id</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5>Información del Pedido</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Cliente</dt>
                <dd class="col-sm-9">@Model.Cliente?.Nombre</dd>

                <dt class="col-sm-3">Fecha y Hora</dt>
                <dd class="col-sm-9">@Model.FechaHoraPedido.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@ObtenerColorEstado(Model.Estado) fs-6">
                        @Model.Estado
                    </span>
                </dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9"><strong>S/ @Model.Total.ToString("F2")</strong></dd>
            </dl>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Detalles del Pedido</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Precio Unitario</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detalle in Model.Detalles)
                    {
                        <tr>
                            <td>@detalle.Producto?.Nombre</td>
                            <td>S/ @detalle.Producto?.Precio.ToString("F2")</td>
                            <td>@detalle.Cantidad</td>
                            <td>S/ @detalle.Subtotal.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <th colspan="3" class="text-end">Total:</th>
                        <th>S/ @Model.Total.ToString("F2")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="ActualizarEstado" asp-route-id="@Model.Id" class="btn btn-warning">Actualizar Estado</a>
        <a asp-action="Pendientes" class="btn btn-secondary">Volver a Pedidos</a>
    </div>
</div>

@functions {
    string ObtenerColorEstado(Dominio.Entidades.PedidoEstado estado)
    {
        return estado switch
        {
            Dominio.Entidades.PedidoEstado.Pendiente => "warning",
            Dominio.Entidades.PedidoEstado.EnPreparacion => "info",
            Dominio.Entidades.PedidoEstado.ListoParaRecoger => "primary",
            Dominio.Entidades.PedidoEstado.Entregado => "success",
            Dominio.Entidades.PedidoEstado.Cancelado => "danger",
            _ => "secondary"
        };
    }
}
