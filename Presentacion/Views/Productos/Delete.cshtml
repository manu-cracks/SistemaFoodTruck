@model Aplicacion.DTOs.ProductoDto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-warning">
        <h4>¿Está seguro de que desea eliminar este producto?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">S/ @Model.Precio.ToString("F2")</dd>

                <dt class="col-sm-3">Categoría</dt>
                <dd class="col-sm-9">@Model.Categoria</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
